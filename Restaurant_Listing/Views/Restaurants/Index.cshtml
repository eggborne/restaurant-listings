@{
  Layout = "_Layout";
}
@using Restaurant_Listing.Models;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li class="restaurant-list-item">
        <p class="name">@Html.DisplayFor(model => restaurant.Name)</p>
        <p class="description">@Html.DisplayFor(model => restaurant.Description)</p>
        <p class="cuisine-type">Cuisine type: @Html.DisplayFor(model => restaurant.Cuisine.Name)</p> 
      </li>
    }
  </ul>
}

<a href='@Url.Action("Create")'>
  <button>Add New Restaurant</button>
</a>
<a href='@Url.Action("Index", "Home")'>
  <button>Home</button>
</a>
