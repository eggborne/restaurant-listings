@{
  Layout = "_Layout";
}
@using Restaurant_Listing.Models;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Restaurant restaurant in Model)
    {
      <li>
        <p>Name: @Html.DisplayFor(model => restaurant.Name)</p>
        <p>Description: @Html.DisplayFor(model => restaurant.Description)</p>
        <p>Cuisine type: @Html.DisplayFor(model => restaurant.Cuisine.Name)</p> 
      </li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new Restaurant", "Create")</p>